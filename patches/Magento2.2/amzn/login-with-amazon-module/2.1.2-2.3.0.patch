+ */
+class LayoutConfigTest extends \PHPUnit\Framework\TestCase
+{
+    public function setUp()
+    {
+        $this->mockCoreHelper = $this->getMockBuilder(CoreHelper::class)
+            ->disableOriginalConstructor()
+            ->getMock();
+    }
+
+    /**
+     * @dataProvider lwaLayoutDataProvider
