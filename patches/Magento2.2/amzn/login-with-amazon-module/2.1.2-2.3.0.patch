+        $this->mockCoreHelper->method('isLwaEnabled')->willReturn($isLwaEnabled);
+        $layoutConfig = new LayoutConfig($this->mockCoreHelper);
+        $this->assertEquals($expected, $layoutConfig->isLwaLayoutDisabled());
+    }
